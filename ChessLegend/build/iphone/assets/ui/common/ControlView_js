function ControlView(e,s){Ti.API.log("control view :"+e+"  "+s);var i=require("ui/common/Constant"),t=(new i,e/6),c=Ti.UI.createView({width:e,height:s,backgroundColor:"pink"});initButtons(t,c);var n=Titanium.UI.createLabel({text:"Playing Speed:",color:"#000",font:{fontFamily:"Helvetica Neue",fontSize:13},textAlign:"center",bottom:10,left:10,width:100,height:"auto"}),h=Titanium.UI.createLabel({text:myChess.chessObj.playingSpeed,color:"#000",font:{fontFamily:"Helvetica Neue",fontSize:15},textAlign:"center",bottom:10,left:120,width:80,boardWidth:1,height:"auto"}),r=Titanium.UI.createSlider({min:500,max:2e3,width:160,height:"auto",bottom:10,left:210});return r.value=myChess.chessObj.playingSpeed,r.addEventListener("change",function(){h.text=Math.round(r.value),myChess.chessObj.playingSpeed=Math.round(r.value)}),r.addEventListener("touchstart",function(){}),r.addEventListener("touchend",function(){}),c.add(n),c.add(h),c.add(r),c}function initButtons(e,s){var i=Ti.UI.createButton({top:2,width:e,height:e/2,title:"Reset",left:e/4});i.addEventListener("click",function(){myChess.chessObj.playModeInProgress&&(myChess.chessObj.playModeInProgress=!1,c.title="Play"),myChess.f.resetPieces()}),s.add(i),s.reset=i,myChess.chessObj.resetButton=i;var t=Ti.UI.createButton({top:2,width:e,height:e/2,title:"Forward",left:1.75*e});t.addEventListener("click",function(){myChess.f.moveForward()}),s.add(t),s.forward=t,myChess.chessObj.forwardButton=t;var c=Ti.UI.createButton({top:2,width:e,height:e/2,title:"Play",left:3.25*e});c.addEventListener("click",function(){myChess.chessObj.playModeInProgress?(myChess.chessObj.playModeInProgress=!1,c.title="Play",myChess.f.pause()):(myChess.chessObj.playModeInProgress=!0,c.title="Pause",myChess.f.play())}),s.add(c),s.play=c,myChess.chessObj.playButton=c;var n=Ti.UI.createButton({top:2,width:e,height:e/2,title:"Backward",left:4.75*e});n.addEventListener("click",function(){myChess.f.moveBackward()}),s.add(n),s.backward=n,myChess.chessObj.backwardButton=n}module.exports=ControlView;