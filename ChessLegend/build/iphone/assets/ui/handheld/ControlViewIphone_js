function ControlView(e,s){var t=require("ui/common/Constant"),i=(new t,e/3),a=Ti.UI.createView({width:e,height:s,backgroundImage:Ti.Filesystem.resourcesDirectory+"images/chessControlPlay.png"});initButtons(i,a);var r=Titanium.UI.createLabel({text:"speed:",color:"#000",font:{fontFamily:"Helvetica Neue",fontSize:10},textAlign:"center",top:1,right:90,width:40,height:"auto"}),n=Titanium.UI.createLabel({text:Math.round(myChess.chessObj.playingSpeed/1e3)+" s",color:"#000",font:{fontFamily:"Helvetica Neue",fontSize:10},textAlign:"center",top:1,right:50,width:40,height:"auto"}),o=Titanium.UI.createSlider({min:1e3,max:5e3,width:100,height:16,top:12,right:35});return o.value=myChess.chessObj.playingSpeed,o.addEventListener("change",function(){myChess.chessObj.playingSpeed=Math.round(o.value),n.text=Math.round(myChess.chessObj.playingSpeed/1e3)+" s"}),o.addEventListener("touchstart",function(){}),o.addEventListener("touchend",function(){}),a.add(r),a.add(n),a.add(o),a}function initButtons(e,s){var t=Ti.UI.createButton({bottom:0,width:e,height:2*e/3,left:0,backgroundImage:null});t.addEventListener("click",function(){myChess.chessObj.playModeInProgress&&(myChess.chessObj.playModeInProgress=!1,s.backgroundImage=Ti.Filesystem.resourcesDirectory+"images/chessControlPlay.png"),setTimeout(function(){myChess.f.resetPieces()},myChess.chessObj.playingSpeed)}),s.add(t),s.reset=t,myChess.chessObj.resetButton=t;var i=Ti.UI.createButton({bottom:0,width:e,height:2*e/3,left:2*e,backgroundImage:null});i.addEventListener("click",function(){myChess.f.moveForward()}),s.add(i),s.forward=i,myChess.chessObj.forwardButton=i;var a=Ti.UI.createButton({top:0,width:e,height:2*e/3,left:0,backgroundImage:null});a.addEventListener("click",function(){myChess.chessObj.playModeInProgress?(myChess.chessObj.playModeInProgress=!1,s.backgroundImage=Ti.Filesystem.resourcesDirectory+"images/chessControlPlay.png",myChess.f.pause()):(myChess.chessObj.playModeInProgress=!0,s.backgroundImage=Ti.Filesystem.resourcesDirectory+"images/chessControlPause.png",myChess.f.play())}),s.add(a),s.play=a,myChess.chessObj.playButton=a;var r=Ti.UI.createButton({bottom:0,width:e,height:2*e/3,left:e,backgroundImage:null});r.addEventListener("click",function(){myChess.f.moveBackward()}),s.add(r),s.backward=r,myChess.chessObj.backwardButton=r}module.exports=ControlView;