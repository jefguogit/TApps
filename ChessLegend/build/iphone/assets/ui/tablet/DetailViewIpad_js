function DetailView(e,t){var s=require("ui/tablet/GameViewIpad"),i=require("ui/tablet/IntroViewIpad"),a=Ti.UI.createView({width:e,height:t}),r=new s(e,t);r.addEventListener("backToList",function(){a.fireEvent("backToList")});var o=new i(e,t);return a.add(r),a.add(o),a.addEventListener("opengame",function(e){Ti.API.log("fire detail"+e.game),this.fireEvent("hideIntro",e),r.fireEvent("openAgame",e)}),a.addEventListener("hideIntro",function(e){o.left=-2e3,r.left=0,o.fireEvent("clean",e)}),a.addEventListener("showIntro",function(e){o.fireEvent("refresh",e),o.left=0,r.left=-2e3}),a}module.exports=DetailView;