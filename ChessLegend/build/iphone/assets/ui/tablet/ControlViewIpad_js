function ControlView(e,t){Ti.API.log("control view :"+e+"  "+t);var s=require("ui/common/Constant"),i=(new s,e/5-12),a=Ti.UI.createView({bottom:0,left:0,width:e,height:t,backgroundImage:Ti.Filesystem.resourcesDirectory+"images/chessControl0.png"});initButtons(i,a);var r=Titanium.UI.createLabel({text:"Speed:",color:"#000",font:{fontFamily:"Helvetica Neue",fontSize:13},textAlign:"center",bottom:0,right:40,width:100,height:"auto"}),o=Titanium.UI.createLabel({text:Math.round(myChess.chessObj.playingSpeed/1e3)+" s",color:"#000",font:{fontFamily:"Helvetica Neue",fontSize:15},textAlign:"center",bottom:0,right:5,width:80,boardWidth:1,height:"auto"}),n=Titanium.UI.createSlider({min:1e3,max:5e3,width:120,bottom:15,right:5});return n.value=myChess.chessObj.playingSpeed,n.addEventListener("change",function(){myChess.chessObj.playingSpeed=Math.round(n.value),o.text=Math.round(myChess.chessObj.playingSpeed/1e3)+" s"}),n.addEventListener("touchstart",function(){}),n.addEventListener("touchend",function(){}),a.add(r),a.add(o),a.add(n),a}function initButtons(e,t){var s=Ti.UI.createButton({bottom:0,width:e+8,height:2*e/3,left:0,backgroundImage:null});s.addEventListener("click",function(){myChess.chessObj.playModeInProgress&&(myChess.chessObj.playModeInProgress=!1,t.backgroundImage=Ti.Filesystem.resourcesDirectory+"mydata/icon/chessControl0.png"),setTimeout(function(){myChess.f.resetPieces()},myChess.chessObj.playingSpeed)}),t.add(s),t.reset=s,myChess.chessObj.resetButton=s;var i=Ti.UI.createButton({bottom:0,width:e,height:2*e/3,left:2*e+8,backgroundImage:null});i.addEventListener("click",function(){myChess.f.moveForward()}),t.add(i),t.forward=i,myChess.chessObj.forwardButton=i;var a=Ti.UI.createButton({bottom:0,width:e,height:2*e/3,left:3*e+8,backgroundImage:null});a.addEventListener("click",function(){myChess.reset=!1,myChess.chessObj.playModeInProgress?(myChess.chessObj.playModeInProgress=!1,t.backgroundImage=Ti.Filesystem.resourcesDirectory+"images/chessControl0.png"):(myChess.chessObj.playModeInProgress=!0,t.backgroundImage=Ti.Filesystem.resourcesDirectory+"images/chessControl.png",myChess.f.play())}),t.add(a),t.play=a,myChess.chessObj.playButton=a;var r=Ti.UI.createButton({bottom:0,width:e,height:2*e/3,left:e+8,backgroundImage:null});r.addEventListener("click",function(){myChess.f.moveBackward()}),t.add(r),t.backward=r,myChess.chessObj.backwardButton=r}module.exports=ControlView;